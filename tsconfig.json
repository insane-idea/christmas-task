{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": ["./src/components"],
  "exclude": ["node_modules"]
}
